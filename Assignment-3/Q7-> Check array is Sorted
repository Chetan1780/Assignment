class Solution {
    // private boolean isSorted(List<Integer> a,int i){
    //     if(i==a.size()) return true;
    //     return a.get(i-1)<=a.get(i) && isSorted(a,i+1);
    // }
    public boolean arraySortedOrNot(List<Integer> arr) {
        // code here
        int i = 1;
        while(i<arr.size()){
            if(arr.get(i-1)>arr.get(i)) return false;
            i++;
        }
        return true;
        
    }
}
